<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_arrow_down"
            android:rotation="90"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Budgets"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/addBudgetButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_add"
            app:tint="@color/primary" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Budget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tile_background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Budget"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/totalBudgetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 25,000.00"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/totalBudgetProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/budget_progress_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/totalBudgetSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-LKR 5,450.30 spent"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/totalBudgetLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 4,549.70 left"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/totalBudgetPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%19"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resetBudgetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Budget Limit"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Entertainment Budget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tile_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/entertainmentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:textColor="@color/category_entertainment"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:id="@+id/entertainmentMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_more_vert"
                        app:tint="@color/text_secondary"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/entertainmentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 10,000.00"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/entertainmentProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/budget_progress_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/entertainmentSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-LKR 5,450.30 spent"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/entertainmentLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 4,549.70 left"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/entertainmentPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%19"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Food Budget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tile_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/foodTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textColor="@color/category_food"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:id="@+id/foodMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_more_vert"
                        app:tint="@color/text_secondary"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/foodAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 5,000.00"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/foodProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/budget_progress_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/foodSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-LKR 5,450.30 spent"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/foodLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 450.30 overspending"
                        android:textColor="@color/expense_red"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/foodPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-%23"
                    android:textColor="@color/expense_red"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Transport Budget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tile_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/transportTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transport"
                        android:textColor="@color/category_transport"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:id="@+id/transportMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_more_vert"
                        app:tint="@color/text_secondary"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/transportAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 1,000.00"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/transportProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/budget_progress_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/transportSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-LKR 0.00 spent"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/transportLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 1,000.00 left"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/transportPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%0"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Lifestyle Budget Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_tile_background"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lifestyleTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifestyle"
                        android:textColor="@color/category_shopping"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:id="@+id/lifestyleMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_more_vert"
                        app:tint="@color/text_secondary"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/lifestyleAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKR 5,000.00"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp" />

                <ProgressBar
                    android:id="@+id/lifestyleProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progressDrawable="@drawable/budget_progress_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/lifestyleSpent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-LKR 5,450.30 spent"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/lifestyleLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LKR 450.30 overspending"
                        android:textColor="@color/expense_red"
                        android:textSize="12sp"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/lifestylePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-%23"
                    android:textColor="@color/expense_red"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
